<%= simple_form_for @category do |c| %>
    <div class="form-group">

        <%= c.input :name, label: "Nome da Categoria ", input_html: {class: "form-control"}%>
    </div>
    <div class="form-group"> 
        <%= c.input :is_favorite,label: "Favorita", as: :boolean, boolean_style: :inline %>
    </div>
        <%= c.button :submit, value: "Criar Categoria", class: "btn btn-success" %>
    </div>
<% end %>

